<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medicalTreatment.MedicalTreatmentAdd">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCarerRegister"
        android:background="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100px">

        <Button
            android:id="@+id/btnPillBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:text="Back"
            app:icon="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/MedicalTreatmentDescription"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textStyle="bold"
            android:text="Description"/>

        <EditText
            android:id="@+id/txtMedicalTreatmentDescription"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/StartDate"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textStyle="bold"
            android:text="Start date"/>

        <EditText
            android:id="@+id/txtStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1" />

        <TextView
            android:id="@+id/EndDate"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textStyle="bold"
            android:text="End date"/>

        <EditText
            android:id="@+id/txtEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1" />

        <TextView
            android:id="@+id/SelectDoctor"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textStyle="bold"
            android:text="Select doctor"/>

        <EditText
            android:id="@+id/txtSelectDoctor"
            android:layout_width="match_parent"
            android:text="Select a doctor"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/SelectPatient"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textStyle="bold"
            android:text="Select patient"/>

        <EditText
            android:id="@+id/txtSelectPatient"
            android:layout_width="match_parent"
            android:text="Select a patient"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnMedicalTreatmentDescriptionSave"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="SAVE" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dosages.DosageAddFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="100px">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="Name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDoctorName"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="Specialism"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDoctorSpecialism"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="Phone number"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countryCodeDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:ccp_defaultNameCode="EC"
                app:ccp_showPhoneCode="true"
                app:ccp_showNameCode="false"
                />

            <EditText
                android:id="@+id/txtDoctorPhoneNumber"
                android:layout_width="197dp"
                android:layout_height="69dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="Email"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDoctorEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="Address"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDoctoDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnSaveDosage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:text="Save " />

    </LinearLayout>


</RelativeLayout>